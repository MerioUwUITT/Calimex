<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Calimex</title>

    <!-- Agregar enlace al archivo de estilo de Materialize -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Reemplazar clases CSS de Bootstrap con Materialize -->
    <nav class="blue darken-4">
        <div class="container">
            <div class="nav-wrapper">
                <a href="#" class="brand-logo center">Calimex</a>
                <ul class="right hide-on-med-and-down">
                    <li>@Html.ActionLink("Realizar Compras", "Index", "Home")</li>
                    <li>@Html.ActionLink("Bitacora de Tickets", "Tickets", "Home")</li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Calimex</p>
        </footer>
    </div>

    <!-- Agregar enlaces a jQuery y Materialize JavaScript -->
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
